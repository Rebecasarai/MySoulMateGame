<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rebecasarai.mysoulmate.Fragments.ProfileFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/croissant_one"
        android:text="Your Last SoulMate!"
        android:textSize="@dimen/default_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />


    <xyz.hanks.library.bang.SmallBangView
        android:id="@+id/smallBangImageNew"
        android:layout_width="222dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageNewSoulMate"
        android:scaleType="centerCrop"
        android:rotation="20"
        />
    </xyz.hanks.library.bang.SmallBangView>

    <!--TODO:Panel de perfil, estadisticas de soulmates, Probabilidad de que salga el soulmate Cuantos buu-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:textSize="@dimen/default_text_size"
            android:text="@string/content_share"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:layout_gravity="left"
            android:id="@+id/shareBtn"
            android:src="@drawable/ic_share_red_24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:textSize="@dimen/default_text_size"
            android:text="Capturados:"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txtshowTotalScreenshots"
                android:fontFamily="@font/croissant_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/default_text_size"
                android:layout_gravity="center_horizontal"
                android:text="40"/>
            <xyz.hanks.library.bang.SmallBangView
                android:id="@+id/like_heart"
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp">
                <ImageView
                    android:id="@+id/imgSmallHeart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favorite_red_24dp"/>
            </xyz.hanks.library.bang.SmallBangView>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
